<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tragicfruit.weatherapp.screens.settings.fragments.list.components.SettingsListItemView
                android:id="@+id/settingsListAlertTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"/>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/settingsListDarkSky"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="bottom"
        android:paddingBottom="@dimen/app_margin_xx"
        android:paddingTop="@dimen/app_margin_xx"
        android:text="@string/settings_list_disclaimer"
        style="@style/TextAppearance.AppCompat.Caption"/>

</FrameLayout>